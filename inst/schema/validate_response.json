{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "definitions": {
        "diagnostic": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string"
                },
                "line": {
                    "type": "array",
                    "items": {
                        "type": "number"
                    }
                }
            },
            "additionalProperties": false,
            "required": ["message", "line"]
        }
    },

    "type": "object",
    "properties": {
        "valid": {
            "type": "boolean"
        },
        "variables" : {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "messages": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/diagnostic"
            }
        },
        "parameters": {
            "type": "array"
            "items": {
                "type": "object",
                "properties": {
                    "default": {
                        "type": ["null", "number"]
                    },
                    "min": {
                        "type": ["null", "number"]
                    },
                    "max": {
                        "type": ["null", "number"]
                    },
                    "is_integer": {
                        "type": "boolean"
                    }
                    "rank": {
                        "type": "integer"
                    }
                }
            }
        },
        "error": {
            "$ref": "#/definitions/diagnostic"
        }
    },
    "additionalProperties": false,
    "required": ["valid"]
}
